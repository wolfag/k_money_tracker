<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AddTaskLogActivity">
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/textFieldBoxesTaskName"
        app:endIcon="@drawable/baseline_edit_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="Task Name">
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/extendedEditTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/textFieldBoxesMoney"
        android:layout_marginTop="15dp"
        app:endIcon="@drawable/baseline_attach_money_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="Money">
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/extendedEditMoney"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:id="@+id/stickySwitch"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:ss_animationDuration="200"
        app:ss_iconPadding="18dp"
        app:ss_iconSize="22dp"
        app:ss_leftIcon="@drawable/baseline_add_24"
        app:ss_leftText="ADD"
        app:ss_rightIcon="@drawable/baseline_remove_24"
        app:ss_rightText="SUBTRACT"
        app:ss_selectedTextSize="14sp"
        app:ss_sliderBackgroundColor="@color/design_default_color_primary"
        app:ss_switchColor="#8cc63f"
        app:ss_textColor="#005431"
        app:ss_textSize="12sp"
        app:ss_animationType="line"/>

    <Button
        android:id="@+id/btnAddTask"
        android:layout_marginTop="15dp"
        android:text="Add"
        android:background="@drawable/bg_btn_add_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>